                    <graphic>
                        <ImageView fitHeight="130.0" fitWidth="123.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@/resources/images/button/user.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Button mnemonicParsing="false" onAction="#onHelpAction" prefHeight="85.0" prefWidth="173.0" styleClass="button-label" text="帮助" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="BOTTOM"/>
